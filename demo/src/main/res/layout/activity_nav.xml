<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nav"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.cess.demo.nav.NavActivity">


    <Button
        android:text="push view holder nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:id="@+id/nav_act_push_view_holder_button"
        android:layout_below="@+id/nav_act_push_frag_button"
        android:layout_alignLeft="@+id/nav_act_push_frag_button"
        android:layout_alignStart="@+id/nav_act_push_frag_button" />

    <Button
        android:text="push nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="37dp"
        android:id="@+id/nav_act_push_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="push frag nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/nav_act_push_frag_button"
        android:layout_below="@+id/nav_act_push_button"
        android:layout_alignLeft="@+id/nav_act_push_button"
        android:layout_alignStart="@+id/nav_act_push_button" />

    <Button
        android:text="push layout nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nav_act_push_layout_button"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/nav_act_push_frag_button"
        android:layout_alignLeft="@+id/nav_act_push_view_holder_button"
        android:layout_alignStart="@+id/nav_act_push_view_holder_button" />
</RelativeLayout>
