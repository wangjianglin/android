        <!--android:layout_width="match_parent"-->
        <!--android:background="#ff0"-->
        <!--android:layout_height="50dp"/>-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="#333"
            android:text="Hello World!">

        </TextView>
        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="50dp"/>-->
