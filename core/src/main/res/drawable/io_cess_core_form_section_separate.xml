<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

 <item>
        <shape >
            <!-- <stroke
                android:width="10dip"  android:color="#fff" 
                 /> -->
            <solid android:color="#fff" />
        </shape>
</item>

<item android:top="0dp" android:left="10dp" android:right="10dp">
<shape android:shape="line">
     <!-- 显示一条虚线，破折线的宽度为dashWith，破折线之间的空隙的宽度为dashGap，当dashGap=0dp时，为实线 -->
   <stroke android:width="1dp" android:color="#dadada"    
             android:dashWidth="2dp" android:dashGap="0dp" />   
             <!-- 虚线的高度 --> 
     <size android:height="1dp" />    
     
</shape>

</item>

</layer-list>