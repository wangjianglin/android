<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item android:top="5dp">
<shape android:shape="line">
     <!-- 显示一条虚线，破折线的宽度为dashWith，破折线之间的空隙的宽度为dashGap，当dashGap=0dp时，为实线 -->
   <stroke android:width="1dp" android:color="#00f"    
             android:dashWidth="2dp" android:dashGap="0dp" />   
             <!-- 虚线的高度 --> 
     <size android:height="1dp" />    
     
</shape>

</item>
 <item>
    <rotate
        android:fromDegrees="0"
        android:toDegrees="0"
        android:pivotX="0%" >
        <shape 
            android:shape="line"
            android:top="1dip" >
            <stroke
                android:width="1dip"  android:color="#0f0" 
                 />
        </shape>
    </rotate>
</item>

 <item>
     
     <clip />
 </item>

</layer-list>