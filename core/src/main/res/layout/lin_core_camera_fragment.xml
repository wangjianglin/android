        <RelativeLayout
            android:id="@+id/flash"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/flash_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lin_core_camera_icon_toggle_flash" />

            <TextView
                android:id="@+id/auto_flash_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/flash_icon"
                android:layout_centerVertical="true"
                android:text="自动"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>

        </RelativeLayout>

        
        <TextView android:id="@+id/camera_preview_time"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:textColor="#fff"
        android:layout_weight="2"
        android:gravity="center"
        android:visibility="invisible"/>
        />
      
        <ImageView
            android:id="@+id/change_camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/lin_core_camera_icon_camera"
            android:layout_weight="1"/>
    </LinearLayout>
    

