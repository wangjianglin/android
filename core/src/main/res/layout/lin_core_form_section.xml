<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#00ffffff"
    android:dividerPadding="0dp"
    android:divider="@drawable/lin_core_form_row_divier"
    android:id="@id/lin_core_form_section_container"
    android:showDividers="middle">



    <LinearLayout android:layout_width="match_parent"
        android:id="@id/lin_core_form_section_header"
        android:layout_height="wrap_content"
        android:minHeight="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/lin_core_form_section_header_text"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:text="0000" />
    </LinearLayout>

    <LinearLayout  android:layout_width="wrap_content"
        android:id="@id/lin_core_form_section_footer"
        android:minHeight="15dp"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/lin_core_form_section_footer_text"
            android:layout_gravity="top"
            android:gravity="top"
            android:text="0000" />
    </LinearLayout>
</LinearLayout>
